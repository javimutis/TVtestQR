<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="tv"
    android:background="@drawable/bg_onboard_mobile_megago"
    tools:ignore="MergeRootFrame" >

<ImageView
    android:id="@+id/logoImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="16dp"
    android:src="@mipmap/ic_banner_foreground" />

<TextView
    android:id="@+id/titleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="60dp"
    android:text="Inicia sesión desde tu celular o computador"
    android:textColor="#FFFFFF"
    android:textSize="22sp"
    android:textStyle="bold"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/titleTextView"
    android:orientation="horizontal"
    android:padding="30dp">

    <LinearLayout
        android:id="@+id/instructionsContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner_container"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/instructionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:text="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Ingresa a megago.cl/registro" />


            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:text="2"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Ingresa el siguiente código" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner_white"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/codeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="EDR2 TWH9"
                    android:textColor="#090000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"/>

            </FrameLayout>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:text="3"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Sigue las instrucciones" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/qrContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner_container"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/qrTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="O puedes escanear el siguiente QR"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <FrameLayout
            android:id="@+id/qrCodeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_white"
            android:padding="2dp">

            <ImageView
                android:id="@+id/qrCodeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/qr_code" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>

<Button
    android:id="@+id/alternativeOptionButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="572dp"
    android:layout_marginBottom="50dp"
    android:background="@drawable/transparent_button_with_white_border"
    android:drawableEnd="@drawable/ic_arrow"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:text="Prefiero otra opción para conectarme"
    android:textColor="#FFFFFF" />
</RelativeLayout>
